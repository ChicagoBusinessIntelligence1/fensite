@import 'functions'

height=180px
width=60px

.fen-element-wrapper
  size(height) !important
  cursor pointer
  border-radius 10px
  overflow hidden

.fen-element
  size(height)
  text-align center
  position relative
  color #f5f5f5
  span
    font-size 17px

.fen-element-cover
  size(height, width)
  relative 0px
  background-color lighten(#a9a9a9, 10%)
  color darkblue
  border-radius 5px
  opacity .6


.vertical-alignment
  font-family font-family 'Karma', serif !important
  top 40%
  position absolute
  width 100%
  text-align center




ul.fen-elements
  margin 0 auto
  ul(style = disc)
  li
    position: relative
    display: inline-block !important
    list-style: none;
    margin-left: auto;
    margin-right: auto;
    width 150px !important
    height 150px !important



.slide-up
  position: relative
  -webkit-transition:all linear 0.5s;
  transition:all linear 0.5s;

.slide-up
  top - width


.slide-up.ng-hide
  top 0px;

.hard-wood
  -webkit-transition: background-color 1s ease;
  background-color #43464D
  hover-color(blue) !important

.soft-wood
  -webkit-transition: background-color 1s ease;
  background-color #43464D
  hover-color(green) !important

