@import 'functions'

width = 128px
height = 80px

.elements-nav-wrapper
  padding-right 10px
  padding-left 10px
  margin-left 15px

.elements-nav
  padding 5px 0px


.fen-element-wrapper
  size(width, height) !important
  border-radius 7px
  cursor pointer
  overflow hidden

.fen-element
  size(width, height)
  text-align center
  position relative
  color #f5f5f5
  span
    font-size 17px

.fen-element-cover
  height 30px !important
  border-radius 7px
  width width
  relative 0px
  background-color lighten(#a9a9a9, 10%)
  color darkblue
  opacity .6
  font-size 1em !important

.vertical-alignment
  font-family font-family 'Karma', serif !important
  top 40%
  position absolute
  width 100%
  text-align center

ul.fen-elements
  margin 0 auto
  ul(style = disc)
  li
    position: relative
    display: inline-block !important
    list-style: none;
    margin-left: auto;
    margin-right: auto;
    width 150px !important
    height 150px !important

.slide-up
  position: relative
  transition(1s)

.slide-up
  top -30px

.slide-up.ng-hide
  top 0px;

.fire
  -webkit-transition: background-color 1s ease;
  background-color #43464D
  hover-color(blue)!important

