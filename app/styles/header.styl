     =top-navbar
***********************/

.navbar-app
  margin-bottom 0px
  border-radius 0px
  background-color color-skin !important
  font font-app !important
  ul
    li
      a
        font-family "Raleway", sans-serif, "Helvetica Neue", Helvetica, Arial

.span-top-nav
  display inline-block
  padding-left 5px
  padding-right 5px
  font font-app !important

.brand-name
  font-size 20px

.brand-name
.btn-search
.fb-name
  margin-left 5px

.navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav > .open > a:hover, .navbar-default .navbar-nav > .open > a:focus
  background-color inherit
  font font-app !important

.img-fb
  width 20px
  height 20px
  margin-right (@width / 4) !important

