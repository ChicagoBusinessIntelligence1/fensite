@import 'functions'

.tog.ng-enter,
.tog.ng-hide-add,
.tog.ng-hide-remove,
.tog.ng-leave
  position relative
  transition(1s)


.tog.ng-enter,
.tog.ng-hide-remove,
.tog.ng-hide-add.ng-hide-add-active,
.tog.ng-leave.ng-leave-active
  opacity 0
  left 200px


.tog.ng-enter.ng-enter-active,
.tog.ng-hide-add,
.tog.ng-hide-remove.ng-hide-remove-active,
.tog.ng-leave
  opacity 1
  left 0px

.slider.ng-enter,
.slider.ng-hide-add,
.slider.ng-hide-remove,
.slider.ng-leave
  position relative
  transition(1s)


.slider.ng-enter,
.slider.ng-hide-remove,
.slider.ng-hide-add.ng-hide-add-active,
.slider.ng-leave.ng-leave-active
  opacity 0
  left 200px


.slider.ng-enter.ng-enter-active,
.slider.ng-hide-add,
.slider.ng-hide-remove.ng-hide-remove-active,
.slider.ng-leave
  opacity 1
  left 0px
