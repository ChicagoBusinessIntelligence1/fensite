@import 'functions'
@import 'post'
@import 'header'
@import 'footer'
@import 'aside'
@import 'modal'
@import 'fenelements'
@import 'animation/ng-animation'
/**********************

     Variables
***********************/

* {
  margin: 0;
}


html
  -webkit-font-smoothing antialized

body
  color color-app
  font font-app
  line-height 30px
  background-color color-darken

hr
  border-color color-border-dark

h1, h2, h3, h4, h5, h6, legend
  color color-app

h6
  font-size 18px
  font-weight 700
  margin-bottom 5px !important
  margin-top 5px

.btn-link-dark
  link-custom()

.btn-link-light
  link-light()

.btn-primary
  background-color label-default-background
  border-color lighten(label-default-background, 5%)
  &:hover
  &:focus
  &:active
    background-color lighten(label-default-background, 15%)
    border-color lighten(label-default-background, 10%)

/**********************
    =form
***********************/
textarea
input
  background-color lighten(color-app, 97%) !important
  color lighten(color-app, 27%) !important
  &:hover
  &:active
  &:focus
    background-color lighten(color-app, 98%) !important
    color color-app !important

/**********************
     =main content
**********************/
.main-content
  border-left border-app-light
  border-right border-app-light

.error input, .error textarea, .error select
  margin-bottom 16px

.btn-wrapper
  margin-bottom 25px

.content-wrapper
  background-color color-content
  border-left border-app-light
  padding-left 30px
  min-height 1200px

/**********************
      =Post
***********************/

.article-img
  float right

/**********************
      =about
***********************/
.custom-list
  comma-list()

table
  stripe()
  td
    padding 4px 10px

table#users
  stripe lighten(color-app, 25%) lighten(color-app, 10%)
  td, th
    color color-lighten

/**********************
    =contact us
***********************/

.contact-address
  custom-radius 15px
  border border-app-light
  width 300px
  padding 15px

.slide-view
  z-index 999
