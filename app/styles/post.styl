@import 'nib'

@import 'functions'

/**********************
     =sv-article
***********************/

.post-content
  border-bottom 0px
  background-color inherit !important

.post-comment
  background-color color-lighten

.post-content
.post-comment
  margin-bottom 0px
  line-height 24px
  padding 10px 15px
  border-radius 0px

.comment-input
  textarea
    margin-top 10px
    margin-bottom 10px

.ul-comment
  font-size 12px

.p-comment
  margin-bottom 0px
  line-height 20px
  font-size 12px

.p-post-time
  post-time(12px)

.p-comment-time
  post-time(11px)

.user-name-comment
  font-weight 700
  font-size 12px
  font-weight bold !important

.panel-comment
  border-radius 0px

.editable
  text-decoration none
  cursor pointer
  display inline-block
  padding 0px
  line-height 1.2em
  border-bottom dashed 1px #0088cc !important;

.popover-title
  color lighten(color-app, 10%) !important

.color-danger
  color color-danger
  hover-color(red)
  cursor pointer


.color-edit
  color lighten(dodgerblue, 30%)
  cursor pointer
  hover-darken(30%)

.editable-form
  textarea
    position relative
    font-size 12px
    margin-bottom 10px

.btn-save
  margin-right 10px

.btn-cancel
  color lighten(color-app, 40%)
  &:hover
  &:active
  &:focus
    color lighten(color-app, 20%)


.btn-remove
  background-color orange
  hover-color(red)

.popover-wide
  max-width 300px !important

